<h1><%= @link.name %></h1>

<ul>
  <% @link.comments.each do |comment| %>
  <li><%= comment.user_name %>'s comment:  "<%= comment.comment_text %>"</li>
  <% end %>
</ul>

<p><%= link_to 'Add Comment', new_link_comment_path(@link), :class => "btn btn-xs btn-default" %></p>

<p><%= link_to 'Back', links_path, :class => "btn btn-xs btn-primary" %></p>
