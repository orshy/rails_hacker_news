<h1>Hacker News</h1><hr>

<h4>Article: </h4>

<ul>
  <% @links.each do |link| %>
    <li>
      <small><%= link_to link.url, "http://#{link.url}" %></small>
      <%= form_for link do |f| %>
      <small><%= link_to "view comments (#{link.comments.count})", link_path(link) %></small>
      <small><%= link_to '(edit)', edit_link_path(link) %></small>
      <small><%= link_to '(delete)', link_path(link),
                                        :data => {:confirm => 'Delete?',
                                        :method => 'delete' } %></small><br>

      <small>Link Score : <%= link.link_score%></small><br>
      <%= f.hidden_field :link_score, value: link.link_score += 1 %>
      <%= f.button 'Up Vote' %>
      <% end %><%= link_to "Down Vote", link_downvote_path(link)  %><br>


      <br>

    </li>
  <% end %>

</ul>

<p><small><%= link_to 'create new link', new_link_path %></small></p>
