<%= render('layouts/errors', :object => @comment) %>

<%= form_for [@link, @comment] do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :user_name, :placeholder => "enter here" %>
  <%= f.label :comment_text %>
  <%= f.text_field :comment_text, :placeholder => "enter here" %><hr>
  <p><%= f.submit %></p>
<% end %>
